{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"importHelpers": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
